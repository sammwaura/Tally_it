<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">





    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/signupimage"
        android:scaleType="centerCrop"
        >
    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/tallyit"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"

        />


    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >

        <customfonts.MyTextView
            android:id="@+id/head2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 3 out of 8"
            android:textColor="#fff"
            android:textSize="14dp"
            android:gravity="center"
            />

        <customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Categories"
            android:textColor="#fff"
            android:textSize="34dp"
            android:gravity="center"
            />


    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/acc"
        android:layout_below="@+id/image"
        >
    <LinearLayout

        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="6dp"
        >
        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:gravity="left"
            android:background="#20ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content" ><requestFocus /></Spinner>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp"
            android:background="#dad8d8"/>

        <customfonts.MyEditText
            android:id="@+id/subcategory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:background="#0000"
            android:gravity="left"
            android:hint="Add the name of all product categories separated by comma e.g beans,rice,green peas"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="16dp"
            android:textColor="@color/colortext"
            android:textColorHint="@color/colorhint"
            android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#dad8d8"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView

                android:id="@+id/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e74c3c"
                android:layout_margin="5dp"
                android:text="Previous"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="9dp"
                android:layout_marginTop="16dp"
                />

            <customfonts.MyTextView

                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#27ae60"
                android:layout_margin="5dp"
                android:text="Save and Add New"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="9dp"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView

                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f39c12"
                android:text="View Categories"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="#fff"

                android:gravity="center"
                android:padding="9dp"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                />


            <customfonts.MyTextView

                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2b73e1"
                android:text="Next"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="#fff"

                android:gravity="center"
                android:padding="9dp"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>



    </LinearLayout>
    </ScrollView>


</RelativeLayout>
